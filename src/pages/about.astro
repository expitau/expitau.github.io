---
import Panel from "../components/Panel.astro";
import Layout from "../layouts/main.astro";
import * as AboutContent from "../content/static/about.md"

const { Content } = AboutContent;
---

<Layout title="About">
    <style>
        main {
            padding-top: 4rem;
            padding-bottom: 6rem;
        }
        img {
            width: 100%;
        }
        h1 {
            text-align: center;
        }
        p {
            margin-bottom: 1rem;
        }
    </style>
    <a
        href="/"
        style="display: flex; flex-direction: row; align-items: center; gap: 1rem;"
        ><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed"><path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/></svg>
        Back home</a
    >
    <Panel style="padding-inline: 8%; margin-top: 2rem; width: 100%;">
        <article>
            <Content />
        </article>
    </Panel>
</Layout>
