---
import Panel from "../components/Panel.astro";
import Layout from "../layouts/main.astro";
import * as AboutContent from "../content/static/about.md"

const { Content } = AboutContent;
---

<Layout title="About">
    <style>
        main {
            padding-top: 4rem;
            padding-bottom: 6rem;
        }
        img {
            width: 100%;
        }
        h1 {
            text-align: center;
        }
        p {
            margin-bottom: 1rem;
        }
    </style>
    <a
        href="/"
        style="display: flex; flex-direction: row; align-items: center; gap: 1rem;"
        ><svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            width="24px"
            height="24px"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18"></path>
        </svg>
        Back home</a
    >
    <Panel style="padding-inline: 8%; margin-top: 2rem">
        <Content />
    </Panel>
</Layout>
